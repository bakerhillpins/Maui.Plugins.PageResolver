<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoProject.XamlBoundPage"
             xmlns:vm="clr-namespace:DemoProject.ViewModels"
             xmlns:resolver="clr-namespace:Maui.Plugins.PageResolver;assembly=Maui.Plugins.PageResolver"
             Title="XamlBoundPage"
             BackgroundColor="White">
    <ContentPage.BindingContext>
        <resolver:ResolvedBinding ViewModel="XamlBoundViewModel"/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        
        <Label Text="Click the button to set the name:"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        
        <Button Command="{Binding UpdateNameCommand}"
                Text="Update Name"/>
        
        <Label Text="Name:"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        
        <Label Text="{Binding Name}"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        
    </VerticalStackLayout>
</ContentPage>